<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/m_300"
    android:layout_height="match_parent"
    android:background="@drawable/bg_dialog"
    android:orientation="vertical">


    <TextView
        android:layout_width="@dimen/m_300"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/m_10"
        android:gravity="center_horizontal"
        android:text="title"
        android:textColor="#555555"
        android:textSize="@dimen/textsize_22" />

    <TextView
        android:id="@+id/text_phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/m_10"
        android:text="context"
        android:textColor="#555555"
        android:textSize="@dimen/textsize_18" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="@dimen/m_20"
        android:background="#22000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/give_up"
            android:layout_width="0dp"
            android:layout_height="@dimen/m_40"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:textColor="#2684fa"
            android:textSize="@dimen/textsize_18" />

        <View
            android:layout_width="@dimen/m_0"
            android:layout_height="@dimen/m_40"
            android:background="#22000000" />

        <TextView
            android:id="@+id/tv_sure"
            android:layout_width="0dp"
            android:layout_height="@dimen/m_40"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确认"
            android:textColor="#2684fa"
            android:textSize="@dimen/textsize_18" />
    </LinearLayout>
</LinearLayout>